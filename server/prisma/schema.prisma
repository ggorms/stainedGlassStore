generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  fName    String
  lName    String
  Cart     Cart[]
  Address  Address[]
}

model Product {
  id       Int        @id @default(autoincrement())
  name     String
  imageId  Int        @unique
  price    Int
  inStock  Boolean
  CartItem CartItem[]
}

model CartItem {
  cartId    Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  qty       Int

  @@id([cartId, productId])
}

model Cart {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  isFulfilled Boolean    @default(false)
  CartItem    CartItem[]
}

model Address {
  id      Int     @id @default(autoincrement())
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
  unit    String?
  street  String
  city    String
  state   String
  zip     String
  country String
}
